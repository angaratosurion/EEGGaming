    //"DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;AttachDbFilename=|DataDirectory|\\aspnet-SlimeWeb-95F8EA0A-FF6D-42E6-B098-E619D1EE1FFE.mdf;TrustServerCertificate=Yes"
