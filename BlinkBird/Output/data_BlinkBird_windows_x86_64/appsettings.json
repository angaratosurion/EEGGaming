  },
  "BlinkBird": { "EnableHeadset": true},
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "fileName": "./logs/nlog.log",
        "layout": {
          "type": "JsonLayout",
          "Attributes": [
            {
              "name": "TimeStamp",
              "layout": "${date:format=o}"
            },
            {
              "name": "Level",
              "layout": "${level}"
            },
            {
              "name": "Logger",
              "layout": "${logger}"
            },
            {
              "name": "Message",
              "layout": "${message:raw=true}"
            },
            {
              "name": "properties",
              "encode": false,
              "layout": {
                "type": "JsonLayout",
                "includeallproperties": "true"
              }
            }
          ]
        },
        //   "deleteOldFileOnStartup ": true,
        "archiveFileName": "./logs/Archives/nlog-${shortdate}.log",
        "archiveEvery": "Month"

      },
      "logconsole": {
        "type": "Console"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile"
      }

    ]
  }

}

  
